<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <rewrite>
      <rules>

        <!-- (ถ้ามี http:80 binding) บังคับ HTTP -> HTTPS -->
        <rule name="HTTP to HTTPS" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>

        <!-- Proxy ทุกเส้นทางไป Uvicorn ที่ 127.0.0.1:8000 -->
        <rule name="ProxyToUvicorn" stopProcessing="true">
          <match url="(.*)" />
          <action type="Rewrite" url="http://127.0.0.1:8000/{R:1}" logRewrittenUrl="true" />
        </rule>

      </rules>

      <!-- Outbound: แก้ Location จาก http://127.0.0.1:8000/... ให้เป็น https://{HTTP_HOST}/... -->
      <outboundRules>
        <rule name="Location to https" preCondition="IsRedirect" enabled="true">
          <match serverVariable="RESPONSE_Location" pattern="^http://127\.0\.0\.1:8000(.*)" />
          <action type="Rewrite" value="https://{HTTP_HOST}{R:1}" />
        </rule>
        <preConditions>
          <preCondition name="IsRedirect">
            <add input="{RESPONSE_STATUS}" pattern="3\d\d" />
          </preCondition>
        </preConditions>
      </outboundRules>
    </rewrite>

    <!-- เปิด ARR proxy (และใน IIS > Server Proxy Settings ต้องติ๊ก Enable proxy + Reverse rewrite host in response headers) -->
    <proxy enabled="true" reverseRewriteHostInResponseHeaders="true" />

    <!-- ส่งผ่าน error ของแอป ไม่ให้ IIS กลบ -->
    <httpErrors existingResponse="PassThrough" />

  </system.webServer>
</configuration>
